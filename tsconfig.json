{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": false,
      "sourceMap": false,
      "noEmitOnError": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"],
    "ts-node": {
      "esm": true
    }
}